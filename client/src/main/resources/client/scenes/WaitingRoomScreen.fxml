<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../css/waitingroom.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.WaitingRoomScreenCtrl">
    <children>
        <ImageView fx:id="background" fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../pictures/clouds2.png" />
            </image>
        </ImageView>
        <Label fx:id="waiting" alignment="CENTER" contentDisplay="CENTER" layoutX="0" layoutY="125.0" prefHeight="234.0" prefWidth="1280.0" text="Waiting for players..." textFill="#4794ff">
            <font>
                <Font name="Arial Black" size="70.0" />
            </font>
        </Label>
        <Label fx:id="playersInQueue" alignment="CENTER" layoutX="386.0" layoutY="307.0" prefHeight="104.0" prefWidth="508.0" text="X players in the queue" textFill="#000000">
            <font>
                <Font name="Arial Black" size="38.0" />
            </font>
        </Label>
        <Button fx:id="startButton" alignment="CENTER" contentDisplay="CENTER" layoutX="585.0" layoutY="431.0" mnemonicParsing="false" onAction="#start" prefHeight="42.0" prefWidth="106.0" text="START">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
            <font>
                <Font size="24.0" />
            </font>
        </Button>
        <Button fx:id="quitButton" contentDisplay="CENTER" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#quit">
            <graphic>
                <ImageView fx:id="nukeSymbol" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../pictures/nuclear.png" />
                    </image>
                </ImageView>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </children>
</AnchorPane>
